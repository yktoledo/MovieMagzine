<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="org.app.anand.moviemagzine2.MainActivity"
    android:orientation="vertical"
    android:background="#e6e6e6">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.app.anand.moviemagzine2.MainActivity"
        android:orientation="vertical"
        android:background="#e6e6e6"
        >
        <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
            android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


<CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/action_id"
    android:text="Action"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adventure_id"
    android:text="Adventure"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/animation_id"
    android:text="Animation"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/comedy_id"
    android:text="Comedy"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/crime_id"
    android:text="Crime"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/documentary_id"
    android:text="Documentary"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/drama_id"
    android:text="Drama"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/family_id"
    android:text="Family"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fantasy_id"
    android:text="Fantasy"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/history_id"
    android:text="History"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/horror_id"
    android:text="Horror"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/music_id"
    android:text="Music"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mystery_id"
    android:text="Mystery"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/romance_id"
    android:text="Romance"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/science_Fiction_id"
    android:text="Science Fiction"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_Movie_id"
    android:text="TV Movie"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/thriller_id"
    android:text="Thriller"/><CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/war_id"
    android:text="War"/><CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/western_id"
        android:text="Western"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveSubscription_id"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BackUp"
            android:id="@+id/backup_id"
                android:layout_gravity="right"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore"
            android:id="@+id/restore_id"
                android:layout_gravity="right"/>

    </LinearLayout>
</ScrollView>

    </LinearLayout>
    <android.support.design.widget.NavigationView android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>
